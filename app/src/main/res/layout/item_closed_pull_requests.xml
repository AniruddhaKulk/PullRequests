<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:strokeColor="@color/black"
    app:strokeWidth="2dp"
    android:layout_marginVertical="4dp"
    app:contentPadding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemUserImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemUserNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/itemUserImageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/itemUserImageView"
            tools:text="AniruddhaKulk" />

        <TextView
            android:id="@+id/itemPullRequestNumberTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@id/itemUserImageView"
            app:layout_constraintLeft_toLeftOf="@id/itemUserNameTextView"
            app:layout_constraintRight_toRightOf="parent"
            tools:text=" #12345" />

        <TextView
            android:id="@+id/itemPullRequestTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemUserImageView"
            tools:text="[Ticket-1212] Fix minor bug" />

        <ImageView
            android:id="@+id/itemPullRequestCreatedOnImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemPullRequestTitleTextView" />

        <TextView
            android:id="@+id/itemPullRequestCreatedOnTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/itemPullRequestCreatedOnImageView"
            app:layout_constraintLeft_toRightOf="@id/itemPullRequestCreatedOnImageView"
            app:layout_constraintTop_toTopOf="@id/itemPullRequestCreatedOnImageView"
            tools:text="11/1/2020" />

        <ImageView
            android:id="@+id/itemPullRequestClosedOnImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toBottomOf="@id/itemPullRequestCreatedOnImageView"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintRight_toLeftOf="@id/itemPullRequestClosedOnTextView"
            app:layout_constraintTop_toTopOf="@id/itemPullRequestCreatedOnImageView" />

        <TextView
            android:id="@+id/itemPullRequestClosedOnTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/itemPullRequestClosedOnImageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/itemPullRequestClosedOnImageView"
            tools:text="14/1/2020" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>